<Window x:Class="UnoComboBoxBugSample.SecondaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
        Title="Secondary Window with TreeView">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <StackPanel Grid.Row="0" Padding="20" Background="{ThemeResource SystemControlBackgroundAccentBrush}">
            <TextBlock Text="Double-click any item below:"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="White"/>
            <TextBlock Text="This will send a message to the main window"
                       TextWrapping="Wrap"
                       Foreground="White"
                       FontSize="12"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- TreeView -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <muxc:TreeView x:Name="ItemsTreeView"
                           SelectionMode="None">
                <muxc:TreeView.RootNodes>
                    <!-- We'll populate this in code-behind -->
                </muxc:TreeView.RootNodes>
            </muxc:TreeView>
        </ScrollViewer>
    </Grid>
</Window>
